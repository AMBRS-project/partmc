FC = pgf95
# -Mbounds      array bounds checking
# -Mdclchk      check for undeclared variables
FFLAGS = -O -Mpreprocess -DUSE_F95_RAND -module src -DPMC_USE_MOSAIC -I$(MOSAIC_MODDIR)
LDFLAGS = -L$(MOSAIC_LIBDIR)

MOSAIC_MODDIR = -I$(HOME)/proj/mosaic/trunk/datamodules
MOSAIC_LIBDIR = -L$(HOME)/proj/mosaic/trunk

NETCDF_MODDIR = -I$(HOME)/opt/include
NETCDF_LIBDIR = -L$(HOME)/opt/lib
